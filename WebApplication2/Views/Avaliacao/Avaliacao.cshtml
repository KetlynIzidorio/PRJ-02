@model WebApplication2.Models.Avaliacao

@{
    ViewBag.Title = "Avaliacao";
    Layout = "~/Views/Shared/_Avaliacao.cshtml";
}

    @using (Html.BeginForm())
    {   

        @Html.AntiForgeryToken()

        <div class="w3-container w3-black w3-padding-64 w3-large" id="avaliacao">
            <div class="w3-content">
                <h1 class="w3-center w3-jumbo">CONTE COMO FOI SUA EXPERIÊNCIA CONOSCO</h1>
                <div class="w3-container">
                <body>
                    <form action="/action_page.php" class="w3-container w3-card-4 w3-light-grey w3-text-red">
                        <h2 class="w3-center"> Avalie-nos ✩</h2>


                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "w3-row w3-section" })
                        <div class="w3-row w3-section">
                            <i class="col-md-10">
                                @Html.LabelFor(model => model.idAvaliacao, htmlAttributes: new { @class = "w3-xxlarge fa fa-user" })
                                <div class="w3-rest">
                                    @Html.EditorFor(model => model.idAvaliacao, new { htmlAttributes = new { @class = "w3-input w3-border", placeholder = "Nome" } })
                                    @Html.ValidationMessageFor(model => model.idAvaliacao, "", new { @class = "text-danger" })
                                </div>
                        </div>


                        <div class="w3-row w3-section">
                            <i class="col-md-10">
                                @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "w3-xxlarge fa fa-user" })
                                <div class="w3-rest">
                                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "w3-input w3-border", placeholder = "Nome" } })
                                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                                </div>
                        </div>

                        <div class="w3-row w3-section">
                            <i class="col-md-10">
                                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "w3-xxlarge fa fa-user" })
                                <div class="w3-rest">
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "w3-input w3-border", placeholder = "Email" } })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                </div>
                        </div>

                        <div class="w3-row w3-section">
                            <i class="col-md-10">
                                @Html.LabelFor(model => model.mensagem, htmlAttributes: new { @class = "w3-xxlarge fa fa-user" })
                                <div class="w3-rest">
                                    @Html.EditorFor(model => model.mensagem, new { htmlAttributes = new { @class = "w3-input w3-border", placeholder = "Mensagem" } })
                                    @Html.ValidationMessageFor(model => model.mensagem, "", new { @class = "text-danger" })
                                </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Enviar" class="w3-button w3-block w3-section w3-black w3-ripple w3-padding" />
                            </div>
                        </div>
                     </body>
                    <\form>
                </div>
            </div>
        </div>
    }

